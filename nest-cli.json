{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "Admins/**/*", "watchAssets": true },
      { "include": "prisma/**/*", "watchAssets": true },
      { "include": "data/*.json", "outDir": "dist/src/data" },
      { "include": "**/*.hbs", "outDir": "./dist/src" }
    ]
  }
}
